generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  name                   String
  email                  String   @unique
  username               String   @unique
  password               String
  age                    Int
  gender                 Gender
  knowledgeLevel         knowledgeLevel
  reasonsWhy             reasonsWhy
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum knowledgeLevel {
  NOTHING
  BASIC
  INTERMEDIARY
  AVANCED
}

enum reasonsWhy {
  FINANCIAL_FREEDOM
  BUY_PATRIMONY
  INVEST_MYSELF
}
